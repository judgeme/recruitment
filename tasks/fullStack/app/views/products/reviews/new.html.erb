<%= form_with model: create_review_form, url: product_reviews_path do |f| %>
  <%= render 'shared/error_messages', resource: create_review_form %>

  <div class="flex flex-col bg-gray-100 border border-gray-300 items-center justify-center w-9/12">
    <div class="grid grid-cols-2 gap-4">
      <div class="flex flex-col place-items-start">
        <label class="block text-gray-500 text-sm mb-2">
          Shop Name:
        </label>

        <div class="text-lg font-bold text-gray-800">
          <%= product.shop.name %>
        </div>
      </div>

      <div class="flex flex-col place-items-start">
        <label class="block text-gray-500 text-sm mb-2">
          Product Name:
        </label>

        <div class="text-lg font-bold text-gray-800">
          <%= product.title %>
        </div>
      </div>
    </div>

    <div class="flex flex-col place-items-start">
      <%= f.label :rating, class: "block text-gray-500 text-sm" %>
      <%= f.select :rating, (1..5).to_a %>
    </div>

    <div class="flex flex-col w-full">
      <%= f.label :name, class: "m-4 text-gray-500 text-sm mb-2" %>
      <%= f.text_field(
        :reviewer_name,
        placeholder: 'Your name',
        class: <<~CSS.squish
          w-full px-3 py-2 rounded-sm border border-gray-300 flex
          focus:outline-none border-solid focus:border-dashed
        CSS
      ) %>
    </div>

    <div class="flex flex-col w-full m-4 ">
      <%= f.label :review, class: "m-4 text-gray-500 text-sm mb-2" %>
      <%= f.text_area(
        :body,
        placeholder: 'Write your review here',
        class: <<~CSS.squish
          w-full px-3 py-2 rounded-sm border border-gray-300
          focus:outline-none border-solid focus:border-dashed
        CSS
      ) %>
    </div>

    <div class="flex justify-center">
      <%= f.submit(
        'Submit Review',
        class: 'items-center m-4 text-white font-bold rounded-md bg-blue-600 py-2 px-9'
      ) %>
    </div>
  </div>
<% end %>
